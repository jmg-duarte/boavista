{
	// Palette: https://coolors.co/b33305-c54029-d26b57-df9585-f9e9e0-366d5f-2f54b1-1c346e-102144
	// Useful resource: https://meyerweb.com/eric/tools/color-blend/
	"name": "Boavista",
	"type": "light",
	"colors": {
		// Focus border - global unless specified by the element
		"focusBorder": "#CC5640",
		// Editor
		"editor.background": "#FBF3E9",
		"editor.foreground": "#102144",
		"editor.lineHighlightBackground": "#F7E1D3",
		"editor.selectionBackground": "#F7E1D3",
		"editor.selectionHighlightBackground": "#F4C7B7",
		"editorGroup.border": "#F4C7B7",
		"editorLineNumber.foreground": "#DE9887",
		"editorLineNumber.activeForeground": "#c54029",
		"editorWidget.background": "#FBF3E9",
		"editorWidget.foreground": "#102144",
		"editorWidget.border": "#F4C7B7",
		// Tabs
		"editorGroupHeader.tabsBackground": "#F3E5D9",
		"tab.inactiveBackground": "#FAEEE4",
		"tab.border": "#FAEEE4",
		"tab.hoverBackground": "#FBF3E9",
		// Activity bars
		"activityBar.background": "#F3E5D9",
		"activityBar.foreground": "#102144",
		// "activityBar.border": "#F4C7B7",
		// "activityBar.inactiveForeground": "#93A5C8",
		"activityBarBadge.background": "#c54029",
		"activityBarBadge.foreground": "#fbf7ef",
		// Side bar
		"sideBar.background": "#FAEEE4",
		"sideBar.foreground": "#102144",
		// "sideBar.border": "#F4C7B7",
		"sideBarSectionHeader.background": "#F5DED0",
		"sideBarSectionHeader.border": "#F4C7B7",
		// Bottom bar
		"statusBar.background": "#F3E5D9",
		"statusBar.foreground": "#102144",
		// "statusBar.border": "#F4C7B7",
		// No Folder
		"statusBar.noFolderBackground": "#F3E5D9",
		// Debug
		"statusBar.debuggingBackground": "#DE9887",
		"statusBar.debuggingForeground": "#fbf7ef",
		"debugToolBar.background": "#FBF3E9",
		// Bottom panel
		"panel.border": "#F4C7B7",
		"panelTitle.activeForeground": "#102144",
		"panelTitle.inactiveForeground": "#102144",
		// Title bar
		"titleBar.activeBackground": "#F3E5D9",
		"titleBar.inactiveBackground": "#F3E5D9",
		// "titleBar.border": "#F4C7B7",
		// Input
		"input.background": "#FBF3E9",
		"input.foreground": "#102144",
		"input.border": "#F4C7B7",
		// Menu (not used on MacOS)
		"menu.background": "#FBF3E9",
		"menu.foreground": "#102144",
		"menu.selectionBackground": "#F3E5D9",
		"menu.selectionForeground": "#102144",
		// List
		"list.hoverBackground": "#F3E5D9",
		"list.hoverForeground": "#102144",
		"list.activeSelectionForeground": "#102144",
		"list.activeSelectionBackground": "#F3E5D9",
		"list.inactiveSelectionForeground": "#102144",
		"list.inactiveSelectionBackground": "#F3E5D9",
		// Quick Input
		"quickInput.background": "#FAEEE4",
		"quickInput.foreground": "#102144",
		"quickInputList.focusBackground": "#F5DED0",
		"quickInputList.focusForeground": "#c54029",
		"quickInputList.focusIconForeground": "#102144",
		// Buttons
		"button.foreground": "#fbf7ef",
		"button.background": "#c54029",
		"button.hoverBackground": "#B33305", // Rust color
		"button.separator": "#fbf7ef",
		// Checkbox
		"checkbox.foreground": "#c54029",
		"checkbox.background": "#F3E5D9",
		// Dropdown
		"dropdown.background": "#FBF3E9",
		"dropdown.border": "#F4C7B7",
		// Notifications
		"notifications.background": "#fbf7ef",
		// Brackets
		"editorBracketHighlight.foreground1": "#2A5DDE",
		"editorBracketHighlight.foreground2": "#992511",
		"editorBracketHighlight.foreground3": "#088A45",
		// Inlay hints
		"editorInlayHint.background": "#f4c7b7ac",
		// Peek View
		"peekView.border": "#CC5640",
		"peekViewEditor.background": "#fbf7ef",
		"peekViewTitle.background": "#F3E5D9",
		"peekViewResult.background": "#FBF3E9",
		// TODO: editorCodeLens
	},
	"semanticHighlighting": true,
	"semanticTokenColors": {
		"*.builtin": {
			"fontStyle": "bold"
		},
		"*.deprecated": {
			"fontStyle": "strikethrough"
		},
		"*.controlFlow": {
			"fontStyle": "italic"
		},
		"class": {
			"foreground": "#B33305",
			"fontStyle": "italic"
		},
		"struct": {
			"foreground": "#B33305",
		},
		"module": {
			"foreground": "#2F54B1",
			"fontStyle": "italic"
		},
		"enum": {
			"fontStyle": "underline"
		},
		"enumMember": {
			"foreground": "#2F54B1",
			"fontStyle": "underline"
		},
		// Types
		"type": {
			"foreground": "#B33305",
			"fontStyle": "italic"
		},
		"typeAlias": {
			"foreground": "#B33305",
			"fontStyle": "italic"
		},
		"*.typeHint": {
			"foreground": "#B33305",
			"fontStyle": "italic"
		},
		"*.typeHintComment": {
			"fontStyle": "italic"
		},
		// Functions / Methods
		"method": {
			"foreground": "#B33305"
		},
		"function": {
			"foreground": "#B33305"
		},
		"magicFunction": {
			"foreground": "#B33305",
			"fontStyle": "italic"
		},
		// Function Parameters
		"parameter": {
			"foreground": "#2F54B1",
			"fontStyle": "italic"
		},
		// Variables
		"variable": "#2F54B1",
		"property": "#2F54B1",
		"variable.readonly": {
			"fontStyle": "underline"
		},
		"property.readonly": {
			"fontStyle": "underline"
		},
		"builtinConstant": {
			"foreground": "#2F54B1",
			"fontStyle": "bold"
		},
		"selfKeyword": {
			"fontStyle": "underline"
		},
		"selfParameter": {
			"fontStyle": "underline"
		},
		"selfTypeKeyword": {
			"fontStyle": "underline"
		},
		"keyword": {
			"fontStyle": "bold",
			"foreground": "#102144"
		},
		// Macro related
		"macro": {
			"fontStyle": "italic",
			"foreground": "#B33305",
		},
		"builtinAttribute": {
			"fontStyle": "italic",
			"foreground": "#2F54B1"
		},
		"decorator": {
			"fontStyle": "italic",
			"foreground": "#2F54B1"
		},
		"deriveHelper": {
			"fontStyle": "italic",
			"foreground": "#2F54B1"
		},
		"interface": {
			"fontStyle": "italic",
			"foreground": "#2F54B1"
		},
	},
	"tokenColors": [
		// C54029 - ... - FCF7ED - ... - 102144
		{
			"name": "Comments",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#7A7874"
			}
		},
		{
			"name": "Strings",
			"scope": [
				"string",
				"punctuation.definition.string",
				"string.quoted.single.python",
			],
			"settings": {
				"foreground": "#276E48",
				"fontStyle": "" // Empty to enforce no style
			}
		},
		{
			"name": "Strings: Escape Sequences",
			"scope": "constant.character.escape",
			"settings": {
				"foreground": "#C54029",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Python: Control Flow",
			"scope": "keyword.control.flow.python",
			"settings": {
				"fontStyle": "bold italic",
			}
		},
		{
			"name": "Constant Literals",
			"scope": [
				"constant.numeric",
				"constant.language.json.comments",
			],
			"settings": {
				"foreground": "#B33305"
			}
		},
		{
			"name": "Keywords",
			"scope": [
				"keyword",
				"storage"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#102144"
			}
		},
		{
			"name": "SQL: Functions",
			"scope": [
				"support.function.expression.sql",
				"support.function.aggregate.sql",
				"support.function.ranking.sql",
				"support.function.conversion.sql"
			],
			"settings": {
				"foreground": "#2A5DDE",
				"fontStyle": "underline"
			}
		},
		{
			"name": "SQL: Database/Table Name",
			"scope": [
				"constant.other.database-name.sql",
				"constant.other.table-name.sql"
			],
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"name": "SQL: Type",
			"scope": [
				"storage.type.sql",
			],
			"settings": {
				"foreground": "#C54029",
			}
		},
		{
			"name": "Python: Decorators",
			"scope": [
				"punctuation.definition.decorator.python",
				"entity.name.function.decorator.python",
				"meta.function.decorator.python",
			],
			"settings": {
				"foreground": "#B33305",
			}
		},
		{
			"name": "Markup: Heading",
			"scope": [
				"markup.heading.markdown",
			],
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markup: Quote",
			"scope": [
				"markup.quote",
			],
			"settings": {
				"foreground": "#276E48",
				"fontStyle": "italic"
			}
		},
		{
			"name": "Markup: Link",
			"scope": [
				"markup.underline.link.markdown",
				"markup.underline.link.image.markdown"
			],
			"settings": {
				"foreground": "#2A5DDE",
				"fontStyle": "underline italic"
			}
		},
		{
			"name": "Markup: Link Title",
			"scope": [
				"string.other.link.title.markdown",
				"string.other.link.description.markdown",
			],
			"settings": {
				"foreground": "#B33305",
				"fontStyle": "underline"
			}
		},
		{
			"name": "Markdown: List Bullet",
			"scope": [
				"punctuation.definition.list.begin.markdown",
			],
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markdown: List",
			"scope": [
				"markup.list.unnumbered.markdown",
				"markup.list.numbered.markdown"
			],
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"name": "YAML: True, False, Null",
			"scope": [
				"constant.language.boolean.yaml",
				"constant.language.null.yaml",
			],
			"settings": {
				"fontStyle": "bold"
			}
		}
	]
}